{
   "name": "server-app",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "private": true,
   "main": "src/index.ts",
   "engines": {
      "node": ">=8.0.0"
   },
   "dependencies": {
      "express": "^4.18.2",
      "uuid": "9.0.0",
      "typeorm": "0.3.17",
      "cors": "^2.8.5",
      "typeorm-seeding": "1.6.1",
      "debug": "4.3.4",
      "morgan": "~1.10.0",
      "reflect-metadata": "^0.1.13",
      "body-parser": "^1.19.1",
      "class-validator": "^0.14.0",
      "class-validator-jsonschema": "5.0.0",
      "faker": "^4.1.0",
      "chalk": "^5.2.0",
      "commander": "^11.0.0",
      "path": "^0.12.7",
      "swagger-ui-express": "^4.6.3",
      "swagger-jsdoc": "^6.2.1",
      "dayjs": "^1.10.7",
      "pino": "^7.0.2",
      "pino-pretty": "^7.1.0",
      "zod": "^3.9.8",
      "mariadb": "^3.2.0",
      "mysql": "^2.18.1"
   },
   "devDependencies": {
      "ts-node": "10.7.0",
      "@types/node": "^16.11.10",
      "typescript": "^4.5.2",
      "@types/faker": "^6.6.9",
      "@types/pino": "^6.3.11",
      "@types/swagger-jsdoc": "^6.0.1",
      "@types/swagger-ui-express": "^4.1.3"
   },
   "scripts": {
      "typeorm": "typeorm-ts-node-esm",
      "start": "ts-node src/index.ts",
      "schema:init": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm/cli.js schema:init",
      "schema:drop": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm/cli.js schema:drop --d ./../../packages/server-app/src/data-source.ts",
      "schema:sync": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm/cli.js schema:sync --d ./../../packages/server-app/src/data-source.ts",
      "seed:config": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm-seeding/dist/cli.js config",
      "seed:run": "ts-node --project ./tsconfig.json ./../../node_modules/typeorm-seeding/dist/cli.js seed",
      "db:setup": "npm run schema:drop && npm run schema:sync && npm run seed:config && npm run seed:run",

      "docker:schema:init": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli.js schema:init",
      "docker:schema:drop": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli.js schema:drop --d ./src/data-source.ts",
      "docker:schema:sync": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli.js schema:sync --d ./src/data-source.ts",
      "docker:seed:config": "ts-node --project ./tsconfig.json ./node_modules/typeorm-seeding/dist/cli.js config",
      "docker:seed:run": "ts-node --project ./tsconfig.json ./node_modules/typeorm-seeding/dist/cli.js seed",
      "docker:db:setup": "npm run docker:schema:drop && npm run docker:schema:sync && npm run docker:seed:config && npm run docker:seed:run"
   }
}
